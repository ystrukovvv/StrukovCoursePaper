<Page x:Class="Strukov.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Strukov"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                Администратор
            </TextBlock>

        </Grid>

        <Grid Grid.Row="1">
            <StackPanel>
                <Button Content="Пользователи" Name="btnUsers" Width="100" Height="30"  Click="btnUsers_Click" Margin="0,30,0,0"/>
                <Button Content="Роли" Name="btnRole" Width="100" Height="30" Click="btnRole_Click" Margin="0,10,0,0"/>
                <Button Content="Статистика" Name="btnStatis" Width="100" Height="30" Click="btnStatis_Click" Margin="0,10,0,0"/>
                <Button Content="Выйти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" Click="Button_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
        
    </Grid>
</Page>
