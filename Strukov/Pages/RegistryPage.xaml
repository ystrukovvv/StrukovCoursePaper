<Page x:Class="Strukov.Pages.RegistryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Strukov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                Регистратура
            </TextBlock>

        </Grid>

        <Grid Grid.Row="1">
            <StackPanel>
                <Button Content="Пользователи" Name="btnUsers" Width="100" Height="30"  Click="btnUsers_Click" Margin="0,30,0,0"/>
                <Button Content="Записи на приём" Name="btnRecord" Width="100" Height="30" Click="btnRecord_Click" Margin="0,10,0,0"/>
                <Button Content="Выйти" HorizontalAlignment="Center" VerticalAlignment="Center" Name="btnBack" Width="100" Height="30" Margin="0,10,0,0" Click="btnBack_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
